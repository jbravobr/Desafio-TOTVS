      ME_CONFIG_MONGODB_ADMINPASSWORD: example
      ME_CONFIG_MONGODB_ADMINUSERNAME: root
    image: mongo-express
    networks:
      dbnetwork: {}
    ports:
    - published: 8081
      target: 8081
    restart: always
  web:
