      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: web
    networks:
      dbnetwork: {}
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\Rodrigo Amaro\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
